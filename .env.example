# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_GRPC_PORT=50051
SERVER_ENV=development

# Database
DATABASE_URL=postgres://logmessager:logmessager@localhost:5432/logmessager?sslmode=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=5

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# TLS (optional for development)
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console

# Client Configuration (for client .env)
# All settings are OPTIONAL - client works out of the box

# Server address (default: localhost:50051)
# CENTRAL_SERVER_ADDRESS=chat.example.com:50051

# TLS (auto-enabled for non-localhost servers)
# TLS_ENABLED=true
# TLS_CA_FILE=./certs/ca.crt              # Leave empty to use system CA pool
# TLS_SERVER_NAME=chat.example.com        # Auto-detected from server address

# P2P Configuration (defaults work for most cases)
# P2P_PORT_RANGE_START=50000
# P2P_PORT_RANGE_END=50999

# NAT Traversal - STUN (enabled by default with free public servers)
# STUN_ENABLED=true
# STUN_SERVERS=stun.l.google.com:19302,stun.stunprotocol.org:3478,stun.nextcloud.com:443

# Logging
# LOG_LEVEL=info
# LOG_FORMAT=console
