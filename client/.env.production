# Production Configuration
# Copy this to ~/.logchat/.env for production use

# Your production server address
CENTRAL_SERVER_ADDRESS=chat.yourdomain.com:50051

# TLS will be auto-enabled for non-localhost addresses
# If using Let's Encrypt, no CA file needed (uses system trust store)
TLS_ENABLED=true
TLS_SERVER_NAME=chat.yourdomain.com

# STUN servers for NAT traversal (free public servers)
STUN_ENABLED=true
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun.stunprotocol.org:3478,stun:stun.nextcloud.com:443

# P2P port range
P2P_PORT_RANGE_START=50000
P2P_PORT_RANGE_END=50999

# Logging
LOG_LEVEL=info
LOG_FORMAT=console
